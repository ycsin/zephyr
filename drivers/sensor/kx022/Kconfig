# Kionix KX022 3-axis accelerometer driver

# Copyright (c) 2021 G-Technologies Sdn. Bhd.
# SPDX-License-Identifier: Apache-2.0

menuconfig KX022
	bool "KX022 I2C accelerometer sensor driver"
	depends on I2C
	help
	  Enable driver for KX022 accelerometer sensor driver

if KX022

choice KX022_TRIGGER_MODE
	prompt "Trigger mode"
	help
	  Specify the type of triggering to be used by the driver.

config KX022_TRIGGER_NONE
	bool "No trigger"

config KX022_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select KX022_TRIGGER

config KX022_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select KX022_TRIGGER

endchoice

config KX022_TRIGGER
	bool

config KX022_THREAD_PRIORITY
	int "Thread priority"
	depends on KX022_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config KX022_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on KX022_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

menu "Attributes"

config KX022_FS
	int "Accelerometer full-scale range"
	default 2
	help
	  Specify the default accelerometer full-scale range.
	  An X value for the config represents a range of +/- X G. Valid values
	  are:
	  0:  Full Scale selected at runtime
	  2:  +/- 2g
	  4:  +/- 4g
	  8:  +/- 8g

config KX022_ODR
	int "Accelerometer Output data rate frequency"
	range 0 8
	default 3
	help
	  Specify the default accelerometer output data rate expressed in
	  samples per second (Hz).
	  0: ODR selected at runtime
	  1: 12.5Hz
	  2: 25Hz
	  3: 50Hz
	  4: 100Hz
	  5: 200Hz
	  6: 400Hz
	  7: 800Hz
	  8: 1600Hz

config KX022_AVC
	int "Number of samples to be averaged"
	range 0 7
	default 4
	help
	  Averaging Filter Control, the default setting is 16 samples averaged.
	  0: No averaging
	  1: 2 samples averaged
	  2: 4 samples averaged
	  3: 8 samples averaged
	  4: 16 samples averaged
	  5: 32 samples averaged
	  6: 64 samples averaged
	  7: 128 samples averaged

config KX022_RES
	int "Resolution of the KX022"
	range 0 2
	default 2
	help
	  AKA Sensitivity in the datasheet, related to the power of the
	  KX022, the default setting is 16-bit resolution.
	  0: RES selected at runtime
	  1: 8-bit
	  2: 16-bit
endmenu

endif # KX022
